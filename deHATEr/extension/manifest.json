{
  "manifest_version": 3,
  "name": "4j3k AI Content Filter",
  "version": "0.1.0",
  "description": "Detects and filters harmful social media content using the local AI API server.",
  "permissions": ["storage"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
